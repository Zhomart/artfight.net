<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />

    <link rel="shortcut icon" href="/Public/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/Public/favicon.ico" type="image/x-icon" />

    <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/960.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/text.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/form.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/layout.css")" rel="stylesheet" />

    <link href="@Url.Content("~/Content/ui-lightness/jquery-ui-1.8.20.custom.css")" rel="stylesheet" />

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-datetimepicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/base.js")" type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <div class="container">
            <div class="grid-1 logo">
                <a href="/">
                    <img alt="Art Fight" src="/Content/themes/artfight/images/logo.png" title="Art Fight" />
                </a>
            </div>
            <div class="grid-11" id="nav">
                <ul class="listreset" style="float: left;">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Competitions", "Index", "Competition")</li>
                    @if (ViewBag.competition != null)
                    { 
                        <text><li class="current">
                        @Html.ActionLink((string)ViewBag.competition.title, "Details", "Competition", new { id = (int)ViewBag.competition.id}, new { })</li></text>
                    }
                </ul>
                <ul class="listreset" style="float: right">
                    @Html.Partial("_LogOnPartial")
                </ul>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
    <div id="pictures">
        <div class="container">
            <div class="grid-1">
            </div>
            <div id="pic-nav" class="grid-10">
                <ul>
                    @foreach (ArtFight.Models.Participant p in ViewBag.vip_participants)
                    {
                        <li><a href="/Competition/Participants/@p.competition_id?participant_id=@p.id">
                            <img alt="@p.title()" title="@p.title()" src="@p.picture_url" width="80px"/></a>
                        </li>
                    }
                </ul>
            </div>
            <div class="grid-1"></div>
            <div class="clear"></div>
        </div>
    </div>
    <div id="body" class="container">
        @RenderBody()
    </div>
    <div style="border:1px solid #Fff; min-height:60px;">
        <div style="width:164px; margin:10px auto; border: 1px solid #aaa">
            <span style="padding:2px 5px;">Now: @DateTime.Now</span>
        </div>
        <div style="width:430px; margin:10px auto; text-align: center; border: 1px solid #ccc">
            Made by: <br/>Nursultan Yerezhepov & Serik Beketayev & Zhomart Mukhemejanov<br/>May, 2012
        </div>
    </div>
</body>
</html>
