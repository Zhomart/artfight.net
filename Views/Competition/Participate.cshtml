@model ArtFight.Models.ParticipateModel

@{
    ViewBag.Title = "Participate";
}


<h2>"@ViewBag.competition.title"</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<br/>

@using (Html.BeginForm("Participate", "Competition", FormMethod.Post, new { enctype = "multipart/form-data"  }))
{
    @Html.HiddenFor(model => model.competition_id)
    
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Participate on "@ViewBag.competition.title"</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.desciption)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.desciption)
            @Html.ValidationMessageFor(model => model.desciption)
        </div>

        <div class="editor-label">
            Picture
        </div>

        <div class="editor-field">
            <input type="file" name="picture" id="picture" />
        </div>

        <p>
            <input type="submit" value="Participate" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
